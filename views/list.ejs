<%- include("header") -%> 

    <div class="box" id='heading'>
        <h1>It is your <%= listTitle %>. More specifically, it is <%= nameOfDay %></h1>
    </div>

    <div class="box">

        <% items.forEach(item => { %>
            <form action="/delete" method="post">
                <div class="item">
                    <input type="hidden" name="checkOrigin" value="<%= route %>" />
                    <input type="hidden" name="listTitle" value="<%= listTitle %>" />
                    <input type="checkbox" name="checkbox" value='<%= item.id %>' onChange="this.form.submit()">
                    <p><%= item.name %></p>
                </div>
            </form>
        <% }); %>

        <form action=<%= route %> method="post" class="item">
            <input type="text" name="newItem" placeholder="Add your new task" autocomplete="off">
            <button type="submit" name="button">+</button>
        </form>
    </div>

<%- include("footer") -%> 
